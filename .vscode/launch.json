    "version": "0.2.0",
    "configurations": [
        {
            "name": "Bench Runner",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/env/bin/python",
            "program": "${workspaceFolder}/apps/frappe/frappe/utils/bench_helper.py",
            "args": [
                "frappe",
                "serve",
                "--port",
                "8001",
                "--noreload",
                "--nothreading"
            ],
            "cwd": "${workspaceFolder}/sites",
            "env": {
                "DEV_SERVER": "1"
            }
        }
    ]
}